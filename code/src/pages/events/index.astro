---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const allEvents = await getCollection("events");
---

<Layout>
  <div class="flex flex-col space-y-2">
    <div class="text-2xl">Events</div>
    <div class="h-0.5 bg-gray-800 rounded-full"></div>
    <ul class="flex flex-col space-y-2">
      {
        allEvents.map((event) => {
          return (
            <a class="" href={`/events/${event.slug}`}>
              <li class="p-4 border-2 border-black rounded-lg cursor-pointer">
                <div class="text-xl">{event.data.title}</div>
                <div class="text-sm">{event.data.description}</div>
              </li>
            </a>
          );
        })
      }
    </ul>
  </div>
</Layout>
